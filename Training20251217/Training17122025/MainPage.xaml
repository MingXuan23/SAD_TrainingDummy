<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Training17122025.MainPage"
             Title="Edu Spark">

    <CollectionView x:Name="gamelist">
        <CollectionView.Header>
            <Label Text="Gaming as an edugamers"></Label>
        </CollectionView.Header>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border BindingContext="{Binding .}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer   Tapped="TapGestureRecognizer_Tapped">

                        </TapGestureRecognizer>
                    </Border.GestureRecognizers>
                    <FlexLayout JustifyContent="SpaceBetween">
                        <VerticalStackLayout>
                            <Label Text="{Binding name}" FontAttributes="Bold"></Label>
                            <Label Text="{Binding category}"></Label>
                        </VerticalStackLayout>

                        <Label Text="{Binding totalPlayer,StringFormat='{0} players'}"></Label>

                    </FlexLayout>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
