<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Training17122025.scorepage"
             Title="scorepage">
    <CollectionView x:Name="itemlist">
        <CollectionView.Header>
            <VerticalStackLayout VerticalOptions="Center" x:Name="scoresec">
                <Button Text="ðŸšï¸" Clicked="Button_Clicked_1"></Button>
                <Label Text="Your score:"></Label>
                <Label x:Name="score"></Label>
                <Label Text="Input Nickname:"></Label>

                <Entry x:Name="nicknametxt" ></Entry>

                <Button Text="SUBMIT"   Clicked="Button_Clicked"></Button>

                <Label Text="Leaderboard"></Label>
            </VerticalStackLayout>

        </CollectionView.Header>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <FlexLayout JustifyContent="SpaceBetween">
                    <HorizontalStackLayout>
                        <Label Text="{Binding [ranking], StringFormat='{0}. '}"></Label>
                        <Label Text="{Binding [nickname]}"></Label>
                    </HorizontalStackLayout>

                    <Label Text="{Binding [totalPoint]}"></Label>

                </FlexLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>